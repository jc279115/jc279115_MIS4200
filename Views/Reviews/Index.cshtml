@model IEnumerable<jc279115_MIS4200.Models.Review>

@{
    ViewBag.Title = "Index";
}

    <h2>List of Restaurant Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Place.restName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.fullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userComment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.visitDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Place.restName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.fullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userComment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.visitDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.reviewID }) |
                @Html.ActionLink("Details", "Details", new { id = item.reviewID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.reviewID })
            </td>
        </tr>
    }

</table>
